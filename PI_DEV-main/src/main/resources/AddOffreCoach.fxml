<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.AddOffreCoach">
    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="100.0" layoutY="50.0">
            <children>
                <Label text="Ajouter une Offre Coach" />
                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        <Label text="Durée de validité:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <DatePicker fx:id="dureeValiditeField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        <Label text="État:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <ChoiceBox fx:id="etatField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        <Label text="ID Coach:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <TextField fx:id="idCoachField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                        <Label text="Nouveau Tarif:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <TextField fx:id="nouveauTarifField" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                        <Label text="Réservation Max:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                        <TextField fx:id="reservationMaxField" GridPane.rowIndex="6" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" mnemonicParsing="false" text="Enregistrer" onAction="#handleSaveButtonAction" />
                        <Button fx:id="cancelButton" mnemonicParsing="false" text="Annuler" onAction="#handleCancelButtonAction" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>