<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="810.0" prefWidth="1315.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.EventListController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Liste des Événements" />
        <TableView fx:id="eventTable" layoutX="20.0" layoutY="50.0" prefHeight="300.0" prefWidth="932.0">
            <columns>
                <TableColumn fx:id="imageColumn" prefWidth="100.0" text="Image" />
                <TableColumn fx:id="titleColumn" text="Titre" />
                <TableColumn fx:id="descriptionColumn" text="Description" />
                <TableColumn fx:id="dateDebutColumn" text="Date Début" />
                <TableColumn fx:id="dateFinColumn" text="Date Fin" />
                <TableColumn fx:id="lieuColumn" text="Lieu" />
                <TableColumn fx:id="prixColumn" text="Prix" />
                <TableColumn fx:id="etatColumn" text="État" />
                <TableColumn fx:id="typeColumn" text="Type" />
                <TableColumn fx:id="organisateurColumn" text="Organisateur" />
                <TableColumn fx:id="capaciteMaximaleColumn" text="Capacité Maximale" />
            </columns>
        </TableView>
        <Button layoutX="20.0" layoutY="370.0" onAction="#handleBackButton" text="Retour" />
    </children>
</AnchorPane>
